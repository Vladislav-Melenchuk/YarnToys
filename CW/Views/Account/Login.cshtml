<link rel="stylesheet" href="/css/login.css" />

<div class="login-page">
    <!-- Ліва частина з зображенням -->
    <div class="login-left">
        <img src="/img/login.png" alt="Yarn Image" class="login-image">
    </div>

    <!-- Права частина з формою -->
    <div class="login-right">
        <div class="login-card">
            <h1>Вхід</h1>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="username">Логін користувача:</label>
                    <input type="text" id="username" name="username" required class="form-control" placeholder="Логін">
                </div>
                <div class="form-group">
                    <label for="password">Пароль:</label>
                    <input type="password" id="password" name="password" required class="form-control" placeholder="Пароль">
                </div>
                <div class="form-group d-flex align-items-center">
                    <input type="checkbox" id="rememberMe" name="rememberMe" class="me-2">
                    <label for="rememberMe" class="mb-0">Запам'ятати мене</label>
                </div>
                <button type="submit" class="btn btn-primary">Увійти</button>
            </form>
            <p class="mt-3">
                <a href="/Account/ForgotPassword" class="text-secondary">Забули пароль?</a>
            </p>
        </div>
    </div>
</div>
