@model RegisterViewModel

<link rel="stylesheet" href="/css/register.css" />

<div class="register-page">
    <!-- Ліва частина із зображенням -->
    <div class="register-left">
        <img src="/img/register.jpg" alt="Yarn Image" class="register-image">
    </div>

    <!-- Права частина з формою -->
    <div class="register-right">
        <div class="register-card">
            <h1>Реєстрація</h1>
            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Username">Логін:</label>
                    <input asp-for="Username" class="form-control" placeholder="Введіть логін" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Номер телефону:</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+380*********" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль:</label>
                    <input asp-for="Password" class="form-control" placeholder="Введіть пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Зареєструватися</button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
